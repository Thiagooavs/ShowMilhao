<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShowMilhao.MainPage">

    <StackLayout>
        <Button Text="Sortear Fácil" Clicked="Button_Clicked"/>

        <Label Text="{Binding Enunciado}"/>
        
        <RadioButton Content="{Binding Path=Alternativa[0].Descricao}"/>
        <RadioButton Content="{Binding Path=Alternativa[1].Descricao}"/>
        <RadioButton Content="{Binding Path=Alternativa[2].Descricao}"/>
        <RadioButton Content="{Binding Path=Alternativa[3].Descricao}"/>

        <StackLayout>
            <Button Text="Parar" />
            <Button Text="Proxima" Clicked="Button_Clicked_Proximo"/>
        </StackLayout>
        
    </StackLayout>
</ContentPage>
